type Latent
type Observation

proc Model() -> preal | lat : Latent | obs : Observation = {
  v <- observe{lat}(D.gamma(2; 1));
  if{lat} v < 2.0 then
    _ <- sample{obs}(D.normal(-1; 1));
    return v
  else
    m <- observe{lat}(D.beta(3; 1));
    _ <- sample{obs}(D.normal(m; 1));
    return v
}

proc Proposal() -> unit | . | lat : Latent = {
  v <- sample{lat}(D.gamma(1; 1));
  if{lat} . then
    return ()
  else
    _ <- sample{lat}(D.unif());
    return ()
}

infer {
  importance {
    nsamples: 1000;
  }; # algo
  Model(); # model
  Proposal(); # guide
  obs <- "example-1.in"; # input
  lat <- "example-1.out"; # output
}
